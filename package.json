{
  "name": "sidenoder",
  "version": "0.1.0-alpha",
  "description": "SideNoder",
  "main": "background.js",
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "lint": "vue-cli-service lint",
    "electron:build": "vue-cli-service electron:build",
    "electron:build:all": "npm run electron:build -- --linux deb --win nsis",
    "electron:serve": "vue-cli-service electron:serve",
    "postinstall": "patch-package && husky install && electron-builder install-app-deps",
    "postuninstall": "electron-builder install-app-deps",
    "electron:generate-icons": "electron-icon-builder --input=./public/icon.png --output=build --flatten",
    "fmt": "prettier --write src/**/*.* !src/assets/* && npm run lintfix",
    "lintfix": "vue-cli-service lint --fix",
    "test": "npm run fmt && npm run lint"
  },
  "dependencies": {
    "@devicefarmer/adbkit": "^2.11.3",
    "bootstrap": "^4.5.3",
    "bootstrap-vue": "^2.21.1",
    "bootswatch": "^4.5.3",
    "command-exists": "^1.2.9",
    "core-js": "^3.8.1",
    "electron-settings": "^4.0.2",
    "electron-store": "^6.0.1",
    "flat": "^5.0.2",
    "node-apk-parser": "^0.2.3",
    "node-fetch": "^2.6.1",
    "open": "^7.3.0",
    "open-graph-scraper": "^4.7.1",
    "vue": "^2.6.12",
    "vue-router": "^3.4.9"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "~4.5.9",
    "@vue/cli-plugin-eslint": "~4.5.9",
    "@vue/cli-plugin-router": "~4.5.9",
    "@vue/cli-service": "~4.5.9",
    "babel-eslint": "^10.1.0",
    "electron": "^11.1.0",
    "electron-devtools-installer": "^3.1.1",
    "electron-icon-builder": "^1.0.2",
    "electron-unhandled": "^3.0.2",
    "eslint": "^6.8.0",
    "eslint-plugin-vue": "^7.3.0",
    "husky": "^5.0.6",
    "node-sass": "^5.0.0",
    "patch-package": "^6.2.2",
    "prettier": "2.2.1",
    "sass-loader": "^10.1.0",
    "vue-cli-plugin-electron-builder": "~2.0.0-rc.5",
    "vue-template-compiler": "^2.6.12"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended"
    ],
    "parserOptions": {
      "parser": "babel-eslint"
    },
    "rules": {},
    "ignorePatterns": [
      "**/dist",
      "**/dist_electron"
    ]
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}
